<link type="text/css" href="css/estilos.css">
<script src="/socket.io/socket.io.js"></script>


<div class="row mb-3 p-4 border border-primary">
    <div class="col">
        <div class="float-left">
            <h2>Bienvenido {{nombre}}</h2>
            <b><a href="#">{{email}}</a></b>
        </div>
        <div class="float-right">
            <button class="btn btn-warning" onclick="location.href='/logout'">
                <b>Desloguear</b><br><img src="{{foto}}" alt="">
            </button>
        </div>
    </div>

</div>


<div class="jumbotron">
    <h1>Ingrese Producto</h1>
    <br>

    <form action="/productos" method="POST" autocomplete="off">
        {{!-- <form autocomplete="off"> --}}
            <!-- Campo nombre del producto -->
            <div class="form-group">
                <label for="nombre">Nombre *</label>
                <input id="nombre" class="form-control" type="text" name="nombre" required>
            </div>

            <div class="form-group">
                <label for="descripcion">Descripcion *</label>
                <input id="descripcion" class="form-control" type="text" name="descripcion" required>
            </div>

            <!-- Campo precio del producto -->
            <div class="form-group">
                <label for="precio">Precio *</label>
                <input id="precio" class="form-control" type="number" step="0.01" name="precio" required>
            </div>

            <div class="form-group">
                <label for="codigo">Codigo *</label>
                <input id="codigo" class="form-control" type="text" name="codigo" required>
            </div>

            <div class="form-group">
                <label for="stock">Stock *</label>
                <input id="stock" class="form-control" type="text" name="stock" required>
            </div>
            <!-- Campo url de la foto del producto -->
            <div class="form-group">
                <label for="foto">Foto URL *</label>
                <input id="foto" class="form-control" type="url" name="thumbnail">
            </div>
            <p>* Campos requeridos</p>

            <!-- Botón de envío -->
            <button class="btn btn-success mt-3">Enviar</button>
        </form>

        <div class="mt-5" id="datos"></div>
</div>

<div class="jumbotron" id="centro-mensajes">
    <h1>Centro de Mensajes (Compresión: <span id="compresion-info"></span>%)</h1>
    <br>
    <input type="text" id="username" class="form-control w-50 my-2 mr-2" placeholder="Ingresá tu email">
    <input type="text" id="firstname" class="form-control w-50 my-2 mr-2" placeholder="Ingresá tu nombre">
    <input type="text" id="lastname" class="form-control w-50 my-2 mr-2" placeholder="Ingresá tu apellido">
    <input type="text" id="age" class="form-control w-50 my-2 mr-2" placeholder="Ingresá tu edad">
    <input type="text" id="alias" class="form-control w-50 my-2 mr-2" placeholder="Ingresá tu alias">
    <input type="text" id="avatar" class="form-control w-50 my-2 mr-2" placeholder="Ingresá tu avatar (url)">
    <hr>
    <div id="messages"></div>

    <form class="form-inline mt-3" onsubmit="addMessage(event)" autocomplete="off">
        <input type="text" id="texto" class="form-control my-2 mr-2" placeholder="Ingresá un mensaje...">
        <input id="enviar" class="btn btn-primary my-2" type="submit" value="Enviar!">
    </form>
</div>

